<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MVVM.View.FridgePage"
             Title="Selecteer een Koelkast">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Selecteer een koelkast" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Button Text="Koelkast 1" CommandParameter="1" Clicked="OpenFridgePage" BackgroundColor="DarkBlue" TextColor="White"/>
        <Button Text="Koelkast 2" CommandParameter="2" Clicked="OpenFridgePage" BackgroundColor="DarkBlue" TextColor="White"/>
        <Button Text="Koelkast 3" CommandParameter="3" Clicked="OpenFridgePage" BackgroundColor="DarkBlue" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
