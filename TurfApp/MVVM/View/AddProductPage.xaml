<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MVVM.View.AddProductPage"
             Title="Product Toevoegen">

    <VerticalStackLayout Padding="20">
        <Label Text="Voeg een product toe"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="ProductNameEntry" Placeholder="Productnaam" Margin="5"/>
        <Entry x:Name="ProductCategoryEntry" Placeholder="Categorie" Margin="5"/>
        <Entry x:Name="ProductStockEntry" Placeholder="Aantal flesjes" Keyboard="Numeric" Margin="5"/>
        <Entry x:Name="TotalPriceEntry" Placeholder="Totale prijs (€)" Keyboard="Numeric" Margin="5"/>
        <Entry x:Name="ProductPriceEntry" Placeholder="Prijs per flesje (€)" Keyboard="Numeric" IsReadOnly="True" Margin="5"/>

        <Button Text="Toevoegen"
                Clicked="OnSaveClicked"
                BackgroundColor="DarkBlue"
                TextColor="White"
                CornerRadius="10"
                Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
