<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MVVM.View.ShoppingListPage"
             Title="Boodschappenlijst">

    <VerticalStackLayout Padding="20">
        <Label Text="Boodschappenlijst"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <ListView x:Name="ShoppingListView"
                  ItemsSource="{Binding ShoppingList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Label Text=" - " FontSize="18" />
                            <Label Text="{Binding NeededAmount}" FontSize="18"/>
                            <Label Text=" nodig" FontSize="18"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
