<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MVVM.View.CheckPage"
             Title="Jouw Rekening">
    <VerticalStackLayout Padding="20">
        <Label Text="Jouw rekening" FontSize="24" FontAttributes="Bold" />

        <ListView ItemsSource="{Binding Transactions}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding ProductId}" FontSize="18" />
                            <Label Text=" - " FontSize="18" />
                            <Label Text="{Binding Quantity}" FontSize="18" />
                            <Label Text=" st. - " FontSize="18" />
                            <Label Text="{Binding TotalPrice, StringFormat='â‚¬ {0:0.00}'}" FontSize="18"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label x:Name="TotalAmountLabel" FontSize="22" FontAttributes="Bold" Padding="10"/>
    </VerticalStackLayout>
</ContentPage>
