<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MVVM.View.StartPage"
             Title="TurfApp"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="Center">
        <Image Source="appfoto.png" 
               HeightRequest="450" 
               WidthRequest="450" 
               HorizontalOptions="Center" />

        <Label Text="Welkom bij TurfApp" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Inloggen"
                Clicked="OnLoginButtonClicked"
                BackgroundColor="DarkBlue"
                TextColor="White"
                CornerRadius="8" />

        <Button Text="Registreren"
                Clicked="OnRegisterButtonClicked"
                BackgroundColor="DarkBlue"
                TextColor="White"
                CornerRadius="8" />
    </VerticalStackLayout>
</ContentPage>
