<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.MainPage"
             Title="Admin Dashboard">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Welkom, Admin!" FontSize="24" HorizontalOptions="Center"/>

        <Button Text="Deelnemers bekijken/verwijderen" 
                Clicked="OnViewOrDeleteParticipantsClicked" 
                BackgroundColor="DarkOrange" 
                TextColor="White" 
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center" />

        <Button Text="Koelkast Toevoegen"
                Clicked="OnAddFridgeButtonClicked"
                BackgroundColor="Green"
                TextColor="White"
                CornerRadius="10"
                Margin="10"/>


        <Button Text="Open Database Browser" 
                Clicked="OpenDatabaseBrowser" 
                BackgroundColor="DarkBlue" 
                TextColor="White" 
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center" />

        <Button Text="Uitloggen" 
                Clicked="OnLogoutClicked" 
                BackgroundColor="Red" 
                TextColor="White" 
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
