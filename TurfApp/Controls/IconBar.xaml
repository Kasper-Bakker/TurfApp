<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfApp.Controls.IconBar"
             Padding="0"
             Margin="0">
    <Grid Grid.Row="1" BackgroundColor="DarkCyan" HorizontalOptions="FillAndExpand" HeightRequest="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ImageButton Grid.Column="0" Source="home_icon.png" 
                     Command="{Binding NavigateCommand}" 
                     CommandParameter="HomePage"
                     HorizontalOptions="Center" 
                     VerticalOptions="Center" />
        <ImageButton Grid.Column="1" Source="fridge.png" 
                     Command="{Binding NavigateCommand}" 
                     CommandParameter="FridgePage"
                     HorizontalOptions="Center" 
                     VerticalOptions="Center" />
        <ImageButton Grid.Column="2" Source="shoppinglist.png" 
                     Command="{Binding NavigateCommand}" 
                     CommandParameter="ShoppingListPage"
                     HorizontalOptions="Center" 
                     VerticalOptions="Center" />
        <ImageButton Grid.Column="3" Source="check.png" 
                     Command="{Binding NavigateCommand}" 
                     CommandParameter="CheckPage"
                     HorizontalOptions="Center" 
                     VerticalOptions="Center" />
    </Grid>
</ContentView>
